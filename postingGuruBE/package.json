{
  "name": "social-media-scheduler-backend",
  "version": "1.0.0",
  "description": "Backend API for Social Media Scheduler - A comprehensive tool for managing social media posts across multiple platforms",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "dev:setup": "node scripts/dev-setup.js",
    "db:migrate": "node scripts/migrate.js",
    "db:seed": "node scripts/seed.js",
    "db:reset": "FORCE_SYNC=true npm run db:migrate && npm run db:seed",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "logs:clear": "rm -rf logs/*",
    "uploads:clear": "rm -rf uploads/* && mkdir -p uploads/profiles uploads/thumbnails",
    "queue:dashboard": "bull-board",
    "production:start": "NODE_ENV=production node server.js",
    "docker:build": "docker build -t social-scheduler-backend .",
    "docker:run": "docker run -p 5000:5000 social-scheduler-backend"
  },
  "keywords": [
    "social-media",
    "scheduler",
    "api",
    "nodejs",
    "express",
    "sequelize",
    "postgresql",
    "redis",
    "bull",
    "ai",
    "automation"
  ],
  "author": "Social Media Scheduler Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "sequelize": "^6.35.0",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "express-rate-limit": "^7.1.5",
    "redis": "^4.6.10",
    "ioredis": "^5.3.2",
    "bull": "^4.12.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-google-oauth20": "^2.0.0",
    "express-validator": "^7.0.1",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.32.6",
    "nodemailer": "^6.9.7",
    "axios": "^1.6.0",
    "dotenv": "^16.3.1",
    "moment": "^2.29.4",
    "moment-timezone": "^0.5.43",
    "uuid": "^9.0.1",
    "validator": "^13.11.0",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.52.0",
    "prettier": "^3.0.3",
    "@types/jest": "^29.5.7"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}